{# TODO: Split this out maybe #}
(cloudflare) {
  tls {
    dns cloudflare {{ cloudflare_token }}
  }
}
# immich
photos.{{ domain_name }} {
  import cloudflare
  reverse_proxy localhost:{{ immich_port }}
}
# freshrss
feeds.{{ domain_name }} {
  import cloudflare
  reverse_proxy localhost:{{ freshrss_port }}
}
# memos
blog.{{ domain_name }} {
  import cloudflare
  reverse_proxy localhost:{{ memos_port }}
}
# forgejo
git.{{ domain_name }} {
  import cloudflare
  reverse_proxy localhost:{{ forgejo_port }}
}
# syncthing
sync.{{ domain_name }} {
  import cloudflare
  reverse_proxy localhost:{{ syncthing_port }}
}
# cockpit
server.{{ domain_name }} {
  import cloudflare
  reverse_proxy localhost:{{ cockpit_port }} {
    transport http {
      tls_insecure_skip_verify
    }
  }
}
# karakeep
links.{{ domain_name }} {
  import cloudflare
  reverse_proxy localhost:{{ karakeep_port }}
}
# emby
https://media.{{ domain_name }} {
  import cloudflare
  reverse_proxy localhost:{{ emby_port }}
}
