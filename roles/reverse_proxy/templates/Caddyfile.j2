{# TODO: Split this out maybe #}
(cloudflare) {
  tls {
    dns cloudflare {{ cloudflare_token }}
  }
}
# forgejo
git.{{ domain_name }} {
  import cloudflare
  reverse_proxy localhost:{{ forgejo_port }}
}
# cockpit
server.{{ domain_name }} {
  import cloudflare
  reverse_proxy localhost:{{ cockpit_port }} {
    transport http {
      tls_insecure_skip_verify
    }
  }
}
# karakeep
links.{{ domain_name }} {
  import cloudflare
  reverse_proxy localhost:{{ karakeep_port }}
}
# emby
media.{{ domain_name }} {
  import cloudflare
  reverse_proxy localhost:{{ emby_port }}
}
# calibre-web
https://ebooks.{{ domain_name }} {
  import cloudflare
  reverse_proxy localhost:{{ calibre_web_port }}
}
# audiobookshelf
https://audiobooks.{{ domain_name }} {
  import cloudflare
  reverse_proxy localhost:{{ audiobookshelf_port }}
}
